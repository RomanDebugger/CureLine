{
    "extends": "./tsconfig.json",
    "include": [
        "server",
        "shared"
    ],
    "exclude": [
        "node_modules",
        "client",
        "vite.config.ts"
    ],
    "compilerOptions": {
        "noEmit": false,
        "outDir": "dist/server",
        "rootDir": ".",
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": false
    }
}